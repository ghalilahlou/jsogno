<!DOCTYPE html>
<html lang="<%= typeof lang !== 'undefined' ? lang : 'fr' %>">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= typeof t !== 'undefined' && t.home ? t.home.menu_title : 'Notre Menu - Sogno' %></title>
  <link rel="stylesheet" href="/css/global.css">
  <script src="/js/animations.js" defer></script>
</head>
<body>
  <%- include('partials/header') %>
  <main class="container animate-fade-in">
    <h2 class="section" style="text-align:center; margin-bottom:2rem;"><%= typeof t !== 'undefined' && t.home ? t.home.menu_title : 'Notre Menu' %></h2>
    <div class="menu-list">
      <% if (products && products.length) { %>
        <% products.forEach(function(product) { %>
          <div class="menu-item animate-fade-in">
            <img src="<%= product.image %>" alt="<%= product.name %>" style="max-width:180px; border-radius:16px; margin-bottom:1rem; background:#fff;">
            <h3><%= product.name %></h3>
            <p style="font-size:1rem; color:#7a3b2e; margin-bottom:0.5rem; white-space:pre-line;"><%= product.description %></p>
            <div class="price" style="margin-bottom:0.5rem;"><%= product.price %> DH</div>
            <div class="allergens" style="font-size:0.9rem; color:#666;">Allerg√®nes : <%= product.allergens.join(', ') %></div>
          </div>
        <% }) %>
      <% } else { %>
        <p>Menu en cours de chargement...</p>
      <% } %>
    </div>
  </main>
  <%- include('partials/footer') %>
</body>
</html> 