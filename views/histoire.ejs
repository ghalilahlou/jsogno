      --bordeaux-dark: #4e2e1e;
      --beige: #f9f6f2;
      --beige-light: #fffdf8;
      --gold: #e6b800;
      --gold-light: #ffe066;
      --green: #2d5a27;
      --green-light: #4a7c59;
      --green-pale: #e8f5e8;
      --gray: #444;
      --gray-light: #888;
      --white: #fff;
      --radius: 16px;
      --shadow: 0 4px 24px rgba(122,59,46,0.10);
      --transition: 0.3s cubic-bezier(0.4,0,0.2,1);
      --spacing: 1.5rem;
    }
    
    .histoire-container {
      max-width: 1200px;
      margin: 0 auto;
      padding: var(--spacing);
    }
    
    /* Hero section enrichie */
    .histoire-hero {
      text-align: center;
      margin-bottom: 3rem;
      padding: 4rem 2rem;
      background: linear-gradient(135deg, var(--bordeaux-dark) 0%, var(--green) 50%, var(--bordeaux) 100%);
      color: var(--beige);
      border-radius: var(--radius);
      position: relative;
      overflow: hidden;
      animation: heroEntrance 1.5s ease-out;
    }
    
    @keyframes heroEntrance {
      0% {
        opacity: 0;
        transform: translateY(50px) scale(0.95);
      }
      100% {
        opacity: 1;
        transform: translateY(0) scale(1);
      }
    }
    
    .histoire-hero::before {
      content: '';
      position: absolute;
      top: 0; left: 0; right: 0; bottom: 0;
      background: url('data:image/svg+xml,<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 100 100"><defs><pattern id="grain" width="100" height="100" patternUnits="userSpaceOnUse"><circle cx="25" cy="25" r="1" fill="rgba(230,184,0,0.15)"/><circle cx="75" cy="75" r="1" fill="rgba(45,90,39,0.15)"/><circle cx="50" cy="10" r="0.5" fill="rgba(230,184,0,0.1)"/></pattern></defs><rect width="100" height="100" fill="url(%23grain)"/></svg>');
      opacity: 0.4;
      animation: grainMove 20s linear infinite;
    }
    
    @keyframes grainMove {
      0% { transform: translate(0, 0); }
      100% { transform: translate(100px, 100px); }
    }
    
    .histoire-hero-content {
      position: relative;
      z-index: 2;
    }
    
    .histoire-hero img {
      width: 120px;
      border-radius: 24px;
      box-shadow: 0 8px 32px rgba(0,0,0,0.2);
      margin-bottom: 1.5rem;
      background: var(--white);
      padding: 0.5rem;
      animation: logoFloat 3s ease-in-out infinite;
    }
    
    @keyframes logoFloat {
      0%, 100% { transform: translateY(0px); }
      50% { transform: translateY(-10px); }
    }
    
    .histoire-hero h1 {
      font-size: 4rem;
      margin-bottom: 1rem;
      text-shadow: 2px 2px 4px rgba(0,0,0,0.3);
      font-family: 'Playfair Display', serif;
      font-weight: 700;
      background: linear-gradient(45deg, var(--gold), var(--green-pale));
      -webkit-background-clip: text;
      -webkit-text-fill-color: transparent;
      background-clip: text;
    }
    
    .histoire-hero p {
      font-size: 1.4rem;
      max-width: 800px;
      margin: 0 auto;
      opacity: 0.95;
      line-height: 1.7;
      font-weight: 500;
    }
    
    /* Timeline enrichie */
    .histoire-timeline {
      position: relative;
      margin: 4rem 0;
      padding: 2rem 0;
    }
    
    .histoire-timeline::before {
      content: '';
      position: absolute;
      left: 50%;
      top: 0;
      bottom: 0;
      width: 6px;
      background: linear-gradient(to bottom, var(--gold), var(--green-light), var(--bordeaux));
      transform: translateX(-50%);
      box-shadow: 0 0 20px rgba(230,184,0,0.4);
      border-radius: 3px;
    }
    
    .timeline-item {
      display: flex;
      margin: 3rem 0;
      position: relative;
      opacity: 0;
      transform: translateY(50px);
      transition: all 0.8s cubic-bezier(0.4, 0, 0.2, 1);
    }
    
    .timeline-item.visible {
      opacity: 1;
      transform: translateY(0);
    }
    
    .timeline-item:nth-child(odd) {
      flex-direction: row;
    }
    
    .timeline-item:nth-child(even) {
      flex-direction: row-reverse;
    }
    
    .timeline-content {
      width: 45%;
      padding: 2rem;
      background: var(--white);
      border-radius: var(--radius);
      box-shadow: var(--shadow);
      position: relative;
      border: 2px solid transparent;
      transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
      overflow: hidden;
    }
    
    .timeline-content::before {
      content: '';
      position: absolute;
      top: 0; left: 0; right: 0; bottom: 0;
      background: linear-gradient(45deg, var(--green-pale), var(--beige-light));
      opacity: 0;
      transition: opacity 0.4s ease;
      z-index: -1;
    }
    
    .timeline-content:hover::before {
      opacity: 1;
    }
    
    .timeline-content:hover {
      transform: translateY(-8px) scale(1.02);
      box-shadow: 0 20px 60px rgba(45,90,39,0.2);
      border-color: var(--green-light);
    }
    
    .timeline-item:nth-child(odd) .timeline-content {
      margin-right: 5%;
    }
    
    .timeline-item:nth-child(even) .timeline-content {
      margin-left: 5%;
    }
    
    .timeline-content::after {
      content: '';
      position: absolute;
      top: 50%;
      width: 24px;
      height: 24px;
      background: var(--green);
      border-radius: 50%;
      transform: translateY(-50%);
      box-shadow: 0 0 20px rgba(45,90,39,0.6);
      border: 4px solid var(--white);
      transition: all 0.3s ease;
    }
    
    .timeline-item:nth-child(odd) .timeline-content::after {
      right: -62px;
    }
    
    .timeline-item:nth-child(even) .timeline-content::after {
      left: -62px;
    }
    
    .timeline-content:hover::after {
      background: var(--gold);
      transform: translateY(-50%) scale(1.2);
      box-shadow: 0 0 30px rgba(230,184,0,0.8);
    }
    
    .timeline-year {
      font-size: 2rem;
      font-weight: 700;
      color: var(--green);
      margin-bottom: 1rem;
      font-family: 'Playfair Display', serif;
      position: relative;
    }
    
    .timeline-year::after {
      content: '';
      position: absolute;
      bottom: -5px;
      left: 0;
      width: 40px;
      height: 3px;
      background: linear-gradient(90deg, var(--green), var(--gold));
      border-radius: 2px;
    }
    
    .timeline-title {
      font-size: 1.6rem;
      color: var(--bordeaux-dark);
      margin-bottom: 1rem;
      font-weight: 600;
    }
    
    .timeline-description {
