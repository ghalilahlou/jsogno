      border-color: var(--gold);
    }
    
    .team-name {
      font-size: 1.4rem;
      font-weight: 700;
      color: var(--bordeaux-dark);
      margin-bottom: 0.5rem;
      font-family: 'Playfair Display', serif;
    }
    
    .team-role {
      color: var(--green);
      font-weight: 600;
      margin-bottom: 1rem;
    }
    
    .team-quote {
      font-style: italic;
      color: var(--gray);
      line-height: 1.6;
    }
    
    /* Responsive */
    @media (max-width: 768px) {
      .histoire-timeline::before {
        left: 20px;
      }
      
      .timeline-item {
        flex-direction: column !important;
      }
      
      .timeline-content {
        width: 100%;
        margin: 0 0 0 50px !important;
      }
      
      .timeline-content::after {
        left: -45px !important;
      }
      
      .histoire-hero h1 {
        font-size: 2.5rem;
      }
      
      .histoire-hero p {
        font-size: 1.1rem;
      }
      
      .histoire-team h2 {
        font-size: 2.5rem;
      }
      
      .histoire-team p {
        font-size: 1.1rem;
